{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@data/*": ["data/*"],
      "@pages/*": ["pages/*"],
      "@tests/*": ["tests/*"]
    },
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["@playwright/test", "node"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
